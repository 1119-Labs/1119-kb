{
  "name": "@savoir/monorepo",
  "private": true,
  "type": "module",
  "description": "Monorepo for Savoir",
  "author": "HugoRCD",
  "funding": "https://github.com/sponsors/HugoRCD",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoRCD/savoir.git"
  },
  "bugs": {
    "url": "https://github.com/HugoRCD/savoir/issues"
  },
  "scripts": {
    "prepare": "turbo build --filter='./packages/*'",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:api": "pnpm --filter @savoir/api dev",
    "dev:chat": "pnpm --filter @savoir/chat dev",
    "sync:docs": "pnpm --filter @savoir/api sync:docs",
    "snapshot:create": "pnpm --filter @savoir/api snapshot:create",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "automd": "automd",
    "workflow": "pnpm --filter @savoir/api exec workflow web"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "automd": "^0.4.2",
    "turbo": "^2.5.3"
  },
  "packageManager": "pnpm@10.27.0"
}