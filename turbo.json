{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".vercel/output/**", ".nuxt/**", ".output/**", "dist/**"],
      "env": [
        "AI_GATEWAY_API_KEY",
        "GITHUB_TOKEN",
        "TURSO_DATABASE_URL",
        "TURSO_AUTH_TOKEN",
        "DATABASE_URL_UNPOOLED",
        "BLOB_READ_WRITE_TOKEN",
        "KV_URL",
        "KV_REST_API_TOKEN",
        "KV_REST_API_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "AI_GATEWAY_API_KEY",
        "GITHUB_TOKEN"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
